{% extends 'base.html.twig' %}

{% block title %}Hello AvatarController!
{% endblock %}

{% block importmap %}
	{{ importmap('avatar_update') }}
{% endblock %}

{% block body %}

    	<div class="max-w-screen-xl mx-auto p-5 sm:p-8 md:p-12">
		<div class="relative border-t border-gray-200 bg-gray-50 shadow-sm shadow-gray-400 mb-10 rounded-md">
			<div class="bg-gradient-to-r from-slate-100 via-slate-200 to-slate-100 absolute inset-0 h-36 opacity-90 lg:h-48" width='100' height='10' ></div>
			<div class="relative mx-auto max-w-7xl px-6 pt-16 pb-12 sm:px-12 lg:pt-24">
				<header class="mx-auto max-w-2xl text-center">
					<h3 class="text-1xl text-orange-900 font-extrabold tracking-tight sm:text-4xl">Bonjour {{ user.email }}</h3>
     
					<p class="mt-2 text-sm font-semibold text-sky-900" id="message">
						Modifiez votre pseudonyme et votre avatar
					</p>
				</header>
			</div>
			{{ form_start(Form_update, {attr: {
                class: 'max-w-sm mx-auto',
                id: 'avatar_update_form',
			
            }})}}
				
			<div class="ml-1">
				{{ form_label(Form_update.pseudo)}}
				{{ form_widget(Form_update.pseudo)}}
			</div>
			<div class="text-sm text-red-700 mx-2">
				{{ form_errors(Form_update.pseudo) }}
			</div>
			<div class="col-span-full">
				<div class="mt-2 flex items-center gap-x-3">
					<svg class="size-12 text-gray-300" viewbox="0 0 24 24" fill="currentColor" aria-hidden="true" data-slot="icon">
						<path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 0 0 3.065 7.097A9.716 9.716 0 0 0 12 21.75a9.716 9.716 0 0 0 6.685-2.653Zm-12.54-1.285A7.486 7.486 0 0 1 12 15a7.486 7.486 0 0 1 5.855 2.812A8.224 8.224 0 0 1 12 20.25a8.224 8.224 0 0 1-5.855-2.438ZM15.75 9a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" clip-rule="evenodd"></path>
					</svg>
					<p class="text-cyan-600">Avatar</p>
					<p></p>
				</div>
			</div>

			<div class="mb-6 mx-2 pt-4">
				<p class="preview">
					<img id="imageAvatar" src="" alt="">
				</p>

				<p class="text-center" id="error"></p>
				<div class="mb-8">
					{{ form_label(Form_update.image) }}
					{{ form_widget(Form_update.image) }}
				</div>
				<div class="text-sm text-red-700">
					{{ form_errors(Form_update.image) }}
				</div>

				<div class="!mt-12">
					<button type="submit" id="avatar_update_form_submit" class="btn-confirmation mb-10">
						Saisir
					</button>
				</div>
				{{ form_end(Form_update)}}

			</div>
		</div>


	</div>
{% endblock %}
