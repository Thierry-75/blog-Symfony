{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe
{% endblock %}
{% block importmap %}
	{{ importmap('new-password') }}
{% endblock %}
{% block body %}


	<div class="font-[sans-serif] max-w-3xl items-center mx-auto md:h-screen p-4">


		<div class="grid md:grid-cols-3 items-center shadow-[0_2px_10px_-3px_rgba(6,81,237,0.3)] rounded-xl overflow-hidden">
			<div class="max-md:order-1 flex flex-col justify-center space-y-16 max-md:mt-16 min-h-full bg-gradient-to-r from-cyan-900 to-cyan-700 lg:px-8 px-4 py-4">
				<div>
					<h6 class="text-yellow-300 text-sm font-semibold">Réinitialisation</h6>
					<p class="text-[12px] italic text-gray-300 mt-2 leading-relaxed">Bienvenue.
					</p>
					<p class="text-[12px] italic text-gray-300 mt-2 leading-relaxed">Saisir votre mot de passe.
					</p>
					<ul id="allowState">
						<li id="allowEmail" class="text-[12px] italic mt-4 ml-3 leading-relaxed"></li>
						<li id="allowPassword" class="text-[12px] italic mt-1 ml-3 leading-relaxed"></li>
						<li id="allowAgreeTerms" class="text-[12px] italic mt-1 ml-3 leading-relaxed"></li>
					</ul>
				</div>
				<div>
					<h6 class="text-white text-sm font-semibold">Enregistrement sécurisé</h6>
					<p id="message" class="text-[12px] italic text-yellow-200 mt-2 leading-relaxed"></p>
					<div class="ml-4">
						<ul id='password_criteria' class="text-yellow-200">
							<li id="password_length_criteria" data-password-criteria>12 caractères au total</li>
							<li id="password_special_character_criteria" data-password-criteria>1 caractère spécial</li>
							<li id="password_uppercase_criteria" data-password-criteria>1 lettre majuscule</li>
							<li id="password_number_criteria" data-password-criteria>1 chiffre au moins</li>
							<li id="password_lowercase_criteria" data-password-criteria>1 lettre minuscule</li>
						</ul>
					</div>
				</div>
			</div>
			{{ form_start(resetForm, {attr: {
              novalidate: "novalidate",id:"reset_password_form",
              class: "bg-white md:col-span-2 w-full py-6 px-6 sm:px-16",
              
            }
          })
        }}
			<div class="mb-6">
				<h3 class=" text-2xl font-light text-center text-cyan-600">Saisir</h3>
			</div>

			<div class="space-y-6">
				<div>
					<div class="relative block items-center">
						{{ form_widget(resetForm.plainPassword) }}
						<svg id="resetEyeOne" xmlns="http://www.w3.org/2000/svg" fill="#bbb" stroke="#bbb" class="w-4 h-4 absolute right-4 cursor-pointer" viewbox="0 0 128 128">
							<path d="M64 104C22.127 104 1.367 67.496.504 65.943a4 4 0 0 1 0-3.887C1.367 60.504 22.127 24 64 24s62.633 36.504 63.496 38.057a4 4 0 0 1 0 3.887C126.633 67.496 105.873 104 64 104zM8.707 63.994C13.465 71.205 32.146 96 64 96c31.955 0 50.553-24.775 55.293-31.994C114.535 56.795 95.854 32 64 32 32.045 32 13.447 56.775 8.707 63.994zM64 88c-13.234 0-24-10.766-24-24s10.766-24 24-24 24 10.766 24 24-10.766 24-24 24zm0-40c-8.822 0-16 7.178-16 16s7.178 16 16 16 16-7.178 16-16-7.178-16-16-16z" data-original="#000000"></path>
						</svg>
						<div class="text-sm text-red-700">
							{{ form_errors(resetForm.plainPassword) }}
								<svg id="resetEyeTwo" xmlns="http://www.w3.org/2000/svg" fill="#bbb" stroke="#bbb" class="w-4 h-4 absolute right-4 cursor-pointer" viewbox="0 0 128 128">
							<path d="M64 104C22.127 104 1.367 67.496.504 65.943a4 4 0 0 1 0-3.887C1.367 60.504 22.127 24 64 24s62.633 36.504 63.496 38.057a4 4 0 0 1 0 3.887C126.633 67.496 105.873 104 64 104zM8.707 63.994C13.465 71.205 32.146 96 64 96c31.955 0 50.553-24.775 55.293-31.994C114.535 56.795 95.854 32 64 32 32.045 32 13.447 56.775 8.707 63.994zM64 88c-13.234 0-24-10.766-24-24s10.766-24 24-24 24 10.766 24 24-10.766 24-24 24zm0-40c-8.822 0-16 7.178-16 16s7.178 16 16 16 16-7.178 16-16-7.178-16-16-16z" data-original="#000000"></path>
						</svg>
						</div>
					
					</div>
					
				</div>
			</div>

			<div class="!mt-8">
				<button type="submit" id="change_password_form_submit" class="btn-confirmation">Nouveau mot de passe</button>
			</div>
			{{ form_end(resetForm) }}

		</div>
	</div>


{% endblock %}
